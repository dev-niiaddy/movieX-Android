<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_bottom">

    <fragment
        android:id="@+id/navigation_bottom"
        android:name="com.orbilax.moviex.ui.bottom_navigation.BottomNavigationFragment"
        android:label="bottom_navigation"
        tools:layout="@layout/fragment_bottom_navigation" >
        <action
            android:id="@+id/showMovieDetails"
            app:destination="@id/navigation_details" />
    </fragment>

    <fragment
        android:id="@+id/navigation_details"
        android:name="com.orbilax.moviex.ui.details.DetailsFragment"
        android:label="@string/movie_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="movieId"
            app:argType="integer"
            android:defaultValue="-1"/>
    </fragment>

</navigation>